{
  "name": "leocolomb/wp-algolia",
  "type": "wordpress-plugin",
  "description": "A (unofficial) WordPress plugin to use Algolia as a search engine",
  "keywords": [
    "wordpress",
    "algolia",
    "search"
  ],
  "homepage": "https://github.com/LeoColomb/wp-algolia",
  "license": "MIT",
  "require": {
    "php": ">=5.6",
    "algolia/algoliasearch-client-php": "^2.2",
    "composer/installers": "^1.0",
    "guzzlehttp/guzzle": "^6.3"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.3"
  },
  "autoload": {
    "classmap": [
      "src/"
    ]
  },
  "scripts": {
    "test": [
      "phpcs"
    ]
  },
  "support": {
    "issues": "https://github.com/LeoColomb/wp-algolia/issues"
  }
}
